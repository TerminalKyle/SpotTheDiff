{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "spotthediff",
  "version": "0.1.0",
  "identifier": "com.dylan.spotthediff",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SpotTheDiff",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "maxWidth": 1920,
        "maxHeight": 1080,
        "decorations": false,
        "transparent": true,
        "resizable": true,
        "center": true,
        "titleBarStyle": "Overlay",
        "fullscreen": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
